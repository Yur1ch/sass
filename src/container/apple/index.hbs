<div class="page">


  {{#with header}}
  <div class="header">
    <header class="header__content">
      <did class="header__block">
        <img src="/svg/apple.svg" alt="Apple" class="haeder__icon">


        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </did>

      <div class="header__action">
        <img src="/svg/search.svg" alt="Apple" class="haeder__icon">
        <img src="/svg/profile.svg" alt="Apple" class="haeder__icon">
      </div>
    </header>


  </div>

  <div class="underHeader">
    {{#with ad}}
    <div class="underHeader__content">
      <p class="underHeader__adText">{{title}}</p>
      <div class="underHeader__adButton">
        {{#with link}}
        <a class="adButton__text">{{text}}</a>
        <img src="/svg/right.svg" alt="Right" class="adButton__icon">
        {{/with}}
      </div>
    </div>
    {{/with}}
  </div>
  {{/with}}

